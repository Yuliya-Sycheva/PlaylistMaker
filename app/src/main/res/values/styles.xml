<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsOfMainActivityStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:radius">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size_22sp</item>
        <item name="cornerRadius">@dimen/around_button_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextOfSettingsActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/text_left_16dp</item>
        <item name="android:paddingVertical">@dimen/text_top_21sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="IconsOfSettingsActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="LayoutOfPanelHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/panel_header_4dp</item>
        <item name="android:layout_marginLeft">@dimen/panel_header_4dp</item>
        <item name="android:layout_marginRight">@dimen/panel_header_52dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextOfPreviewActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextOfPanelHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size_22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">12sp</item>
    </style>

    <style name="ImageViewBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/vector</item>
        <item name="android:padding">@dimen/icon_padding_16dp</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
</resources>